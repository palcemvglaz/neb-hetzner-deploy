# Hetzner Production Environment Variables
# Copy this file to .env.production and fill in real values

# Database - PostgreSQL on Hetzner
DATABASE_URL="postgresql://username:password@localhost:5432/nebachiv_production"

# Next.js Production Settings
NODE_ENV="production"
NEXT_PUBLIC_ENV="production"
NEXTAUTH_URL="https://yourdomain.com"
NEXTAUTH_SECRET="<GENERATE_SECURE_SECRET_HERE>"

# Google OAuth (replace with real credentials)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Stripe (replace with real keys)
STRIPE_SECRET_KEY="sk_live_or_test_key"
STRIPE_WEBHOOK_SECRET="whsec_webhook_secret"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_live_or_test_key"

# KB_NEB Integration
KB_NEB_API_URL="http://localhost:8000/api/v1"
KB_NEB_API_KEY="your-production-api-key"
KB_NEB_WEBHOOK_SECRET="your-production-webhook-secret"

# Email Service (if using)
RESEND_API_KEY="your-resend-api-key"

# Optional: Monitoring/Analytics
SENTRY_DSN="your-sentry-dsn"
ANALYTICS_ID="your-analytics-id"

# Debug (set to false for production)
DEBUG="false"
NEXTAUTH_DEBUG="false"